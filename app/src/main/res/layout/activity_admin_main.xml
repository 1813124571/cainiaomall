<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="109dp"
            android:background="@mipmap/cainiaologo"/>

        <LinearLayout
            android:id="@+id/useraudit"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="45dp"
                android:background="@mipmap/yonghu" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:text="审核用户"
                android:textColor="#222"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp">
            <View
                android:layout_width="4dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="#f5f5f5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:id="@+id/commodityaudit">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/shangpingouwudai"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingTop="2dp"
                android:text="审核商品"
                android:textColor="#222"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp">
            <View
                android:layout_width="4dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="#f5f5f5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginTop="47dp"
                android:background="@mipmap/setmine"/>

            <TextView
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:text="设置"
                android:textColor="#222"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/manageuser"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="41dp"
                android:src="@mipmap/dingdan5" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingTop="8dp"
                android:text="管理用户"
                android:textColor="#222"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp">

            <View
                android:layout_width="4dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="#f5f5f5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/managegoods"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="42dp"
                android:src="@mipmap/dingdan3" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingTop="7dp"
                android:text="管理商品"
                android:textColor="#222"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp">

            <View
                android:layout_width="4dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="#f5f5f5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chargemonry"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="33dp"
                android:layout_marginTop="44dp"
                android:src="@mipmap/dingdan4" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:paddingLeft="2dp"
                android:paddingTop="7dp"
                android:text="在线充值"
                android:textColor="#222"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="109dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/cainiaologo" />
    </LinearLayout>



</LinearLayout>